doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://www.w3schools.com/w3css/4/w3.css')
    link(rel='shortcut icon', href='//cdn2.auth0.com/styleguide/latest/lib/logos/img/favicon.png')

  body
    nav.w3-bar.w3-border.w3-light-grey( role="navigation" )
      .w3-bar-item.w3-text-grey Auth0 - NodeJS
      a(href="/auth/").w3-bar-item.w3-button Home
      if locals.user
        a(href="/auth/user" ).w3-bar-item.w3-button Profile
        a(id="qsLogoutBtn" href="/auth/logout").w3-bar-item.w3-button Log Out
      else
        a(id="qsLoginBtn" href="/auth/login").w3-bar-item.w3-button Log In
    block content