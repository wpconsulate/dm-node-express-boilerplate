//- MIXINS
include partials/mixins/grids/responsive/mix-responsive-grid.pug
include partials/mixins/grids/responsive/mix-responsive-grid-item.pug
include partials/mixins/mix-link.pug
include partials/mixins/mix-mso.pug

//- VARIABLES
include partials/variables.pug

//- DOCUMENT
doctype html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd"
html(lang="en")

  //- Document Head
  head
    include partials/head.pug

    style(type="text/css")
      include partials/css/0dev.css
    style(type="text/css")
      include partials/css/1client-specific-styles.css
    style(type="text/css")
      include partials/css/2reset-tags.css
    style(type="text/css")
      include partials/css/3outlook-font.css
    style(type="text/css")
      include partials/css/4fonts.css
    style(type="text/css")
      include partials/css/5ios-blue-links.css
    style(type="text/css")
      include partials/css/6android-fix.css
    style(type="text/css")
      include partials/css/7media-queries.css
    style(type="text/css")
      include partials/css/8media-queries.css
    style(type="text/css")
      include partials/css/9owa.css

  //- Document Content wrapper-table
  body.body(style=m0+p0+bgcw+text_normal)
    //- why do I need this? commented out the mobileOff/On styles too
    //- span.mobileOff(style=disb+w640+mw640+h1+bgcnnb+m0a)
    center
      table(width="100%" bgcolor=dark_grey)&attributes(table_reset)
        tr: td(style=b0)&attributes(td_reset)

          //- START ----->
          blockquote(style=m0+p0)
            form(style=bgcdg+"display: inline-block;box-shadow: 0px 0px 15px 5px rgba(36, 36, 36, 0.3215686274509804);" action="" method="get" target="_blank")
              //- SPACER
              +responsive_grid(640, 600, 15)

              //- logo
              +responsive_grid(640, 600, 1)
                +responsive_grid_item(600)
                  img(src=site_url+'/email/images/email_logo.png' alt="LiteHQ logo" height="130px")

              //- SPACER Border
              +responsive_grid(640, 610, 10)
                td.mobile(style=bt1w)&attributes(td_reset)

              //- SPACER Border
              +responsive_grid(640, 610, 10)
                td.mobile&attributes(td_reset)
              
                p(style=fs14+text_normal+plr30+tal)
                  span(style=text_bold) Hi #{first_name}!
                  br
                  p(style=fs14+text_normal+plr30+tal)
                    | You have requested to reset your password for LiteHQ.
                  p(style=fs14+text_normal+plr30+tal)
                    | Your Reset Token for the same is: 
                    strong(style=fs14) #{reset_token}
                  p(style=fs14+text_normal+plr30+tal) &nbsp;

                  p(style=fs14+text_normal+plr30+tal)
                    | If you do not tried to reset your Password, please ignore this email and we'll suggest you to do not share any info from this email with anyone

                  p(style=fs14+text_normal+plr30+tal)
                    | Abdel  
                  p(style=fs14+text_normal+plr30+tal)
                    | LiteHQ
                    

              
              //- notice
              +responsive_grid(640, 600, 10)
                +responsive_grid_item(600)
                  p(style=m0+p0+fs10+text_normal) *autogenerated email by liteHq systems.

              //- SPACER Border
              +responsive_grid(640, 610, 10)
                td.mobile(style=bb1w)&attributes(td_reset)

              //- social
              +responsive_grid(640, 600, 10)
                +responsive_grid_item(600)
                  p
                    a(href="#" style=fs20+text_normal+ 'padding:0 10px;')
                      i(aria-hidden class="fab fa-youtube" title="Youtube")
                      span(class="sr-only" style=text_normal+fs14) Youtube
                    span(style=text_normal+fs14) &nbsp;
                    a(href="#" style=fs20+text_normal+ 'padding:0 10px;')
                      i(aria-hidden class="fab fa-twitter" title="Twitter")
                      span(class="sr-only" style=text_normal+fs14) Twitter
                    span(style=text_normal+fs14) &nbsp;
                    a(href="#" style=fs20+text_normal+ 'padding:0 10px;')
                      i(aria-hidden class="fab fa-linkedin-in" title="Linkedin-in")
                      span(class="sr-only" style=text_normal+fs14) Linkedin-in
                    span(style=text_normal+fs14) &nbsp;




              //- footer logo
              +responsive_grid(640, 600, 10)
                +responsive_grid_item(600)
                  img(src=site_url+"/email/images/email_logo.png" alt="liteHQ logo" height="40px")
              //- footer links
              //- footer copyright
              +responsive_grid(640, 600, 5)
                +responsive_grid_item(600)
                  p(style=m0+p0+text_normal)
                    a(href="#" style=text_normal+fs12) Privacy Policy
                    |  |&nbsp;
                    a(href="#" style=text_normal+fs12) Terms of Use
                  p(style=p0+fs12+text_normal+ 'margin-top:5px;') &copy; LiteHQ

              //- SPACER
              +responsive_grid(640, 600, 20)
